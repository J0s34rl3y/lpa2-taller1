[run]
source = src
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */.venv/*
    */venv/*
    # Excluir UI y servicios que no se testean
    src/main.py
    src/ui/*
    src/services/tienda.py
    src/models/concretos/comedor.py
    */migrations/*

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    pass

fail_under = 80
